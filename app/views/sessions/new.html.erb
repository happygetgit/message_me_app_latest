<h4 class="ui center aligned icon header">
  <div>
    <p>Welcome to MessageMeApp - A Complete Chatroom Application</p>
    <p>
      <i class="circular power off icon power-off"></i>
    </p>
    <p>Login to continue</p>
  </div>
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
        <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f| %> 
        <div class="form-group field">
          <strong><%= f.label :username %></strong>
          <div class="ui left icon input">
            <%= f.text_field :username, class: "form-control", autofocus: true %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="form-group field">
          <strong><%= f.label :password %></strong>
          <div class="ui left icon input">
            <%= f.text_field :password, class: "form-control", autofocus: true %>
            <i class="lock icon"></i>
          </div>
        </div>
        
        <%= f.submit "Login" , class: "btn btn-primary ui blue submit button"%>
        <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">Or</div>
</div>
